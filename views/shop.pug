extends layouts/main-layout.pug

block styles
	link(rel="stylesheet", href="/css/product.css")

block content
	main
		if products.length > 0
			.grid
				each product in products
					article.card.product-item
						header.class__header
							h1.product__title #{ product.title }
						.card__image
							img(src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fi2.wp.com%2Fmetro.co.uk%2Fwp-content%2Fuploads%2F2018%2F01%2Fpri_66018955.jpg%3Fquality%3D90%26strip%3Dall%26zoom%3D1%26resize%3D644%252C827%26ssl%3D1&f=1&nofb=1", alt="Book")
						.card__content
							h2.product__price $19.99
							p.product__description A BOOK
						.cards__actions
							button.btn Add to card
		else
			h1 No Products